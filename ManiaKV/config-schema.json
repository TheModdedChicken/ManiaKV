{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "TTCS",
  "description": "Tippy Tap Config Schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "schemaVersion": {
      "description": "Version of Tippy Tap schema",
      "type": "string",
      "examples": [ "1.0" ]
    },
    "window": {
      "description": "Window settings",
      "type": "object",
      "properties": {
        "width": {
          "description": "Window width in pixels",
          "type": "number"
        },
        "height": {
          "description": "Window height in pixels",
          "type": "number"
        },
        "alwaysOntop": {
          "description": "Set window to always stay ontop of other windows",
          "type": "boolean"
        },
        "transparent": {
          "description": "Set window to be transparent",
          "type": "boolean"
        },
        "undecorated": {
          "description": "Disable window decorations (Frame and Buttons)",
          "type": "boolean"
        }
      }
    },
    "stages": {
      "description": "Key setups able to be used",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "ID of this key setup",
            "type": "string",
            "examples": [ "2k", "4k", "5k", "6k", "7k", "8k", "9k", "10k" ]
          },
          "characters": {
            "description": "Characters to use (Displayed in the order listed)",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "keys": {
            "description": "Keys able to be used with this setup",
            "type": "array",
            "items": {
              "type": "string",
              "examples": [

              ]
            }
          },
          "shortcut": {
            "description": "Keyboard shortcut used to load this setup. (Ctrl + Shift + 1)",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "background": {
            "description": "Location of background image",
            "type": "string"
          },
          "table": {
            "description": "Location of table image",
            "type": "string"
          }
        },
        "required": [ "id" ]
      }
    },
    "characters": {
      "type": "array",
      "description": "Characters able to be used",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "ID of character",
            "type": "string"
          },
          "body": {
            "description": "Location of character body image. (File location should NOT start with './' or '/')",
            "type": "string"
          },
          "instrument": {
            "description": "Location of instrument image. (File location should NOT start with './' or '/')",
            "type": "string"
          },
          "keys": {
            "description": "Amount of keys able to be used with this character",
            "type": "number",
            "examples": [ 2, 4 ]
          },
          "leftHand": {
            "description": "Images pertaining to the character's left hand. (File locations should NOT start with './' or '/')",
            "type": "object"
          },
          "rightHand": {
            "description": "Images pertaining to the character's right hand. (File locations should NOT start with './' or '/')",
            "type": "object"
          }
        },
        "required": [ "id", "keys" ]
      }
    }
  }
}